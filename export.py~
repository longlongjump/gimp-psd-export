#!/usr/bin/env python
"""

GIMP Plugin for Export psd layers to distinct images with 
xml map of coordinates

file should have execute "permission"
"""


from gimpfu import *


print "Loaded"

def plug_fun(*arg):
    print arg

register(
    "export-from-psd",
    "666",
    "help",
    "nero hellier",
    "fuck copyright",
    "1488",
    "<Image>/PSD",
    "*",
    [(PF_DIRNAME, "x_blur", "Folder", "")],#ask for dir
    [],
    plug_fun,
    )

main()
